<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItineraryFragment"
    android:padding="16dp">

    <!-- Input Fields -->
    <EditText
        android:id="@+id/inputDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Day"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/inputTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Time"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputDay"/>

    <EditText
        android:id="@+id/inputActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Activity"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@android:drawable/editbox_background"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputTime"/>

    <!-- Add Itinerary Button -->
    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Itinerary"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/inputActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- RecyclerView for Displaying Itineraries -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewItinerary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/addButton"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
