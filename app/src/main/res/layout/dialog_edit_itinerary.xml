<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Edit Day -->
    <EditText
        android:id="@+id/editDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Day"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Edit Time -->
    <EditText
        android:id="@+id/editTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Time"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editDay"/>

    <!-- Edit Activity -->
    <EditText
        android:id="@+id/editActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edit Activity"
        android:layout_marginBottom="8dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTime"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/editActivity"/>



</androidx.constraintlayout.widget.ConstraintLayout>
