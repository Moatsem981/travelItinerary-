<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".SpeakTranslateFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak &amp; Translate"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Source Language Selection -->
    <Spinner
        android:id="@+id/sourceLanguageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_background"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Target Language Selection -->
    <Spinner
        android:id="@+id/targetLanguageSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sourceLanguageSpinner" />

    <!-- Speech Input Box -->
    <EditText
        android:id="@+id/speechInputText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Tap the mic and speak..."
        android:textSize="18sp"
        android:textColorHint="#B0B0B0"
        android:textColor="#FFFFFF"
        android:background="@drawable/input_background"
        android:gravity="top|start"
        android:padding="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/targetLanguageSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Microphone Button -->
    <ImageButton
        android:id="@+id/micButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/mic_button_background"
        android:src="@drawable/mic"
        android:contentDescription="Speak"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/speechInputText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Translated Text Box -->
    <TextView
        android:id="@+id/translatedText"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="Translation appears here..."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/output_background"
        android:padding="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/micButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <!-- Translate Button -->
    <Button
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:textSize="16sp"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/translatedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:padding="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
