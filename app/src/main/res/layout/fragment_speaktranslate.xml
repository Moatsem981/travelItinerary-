<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="24dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speak &amp; Translate"
        android:textColor="@color/light_gray"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Source Language Spinner Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sourceLanguageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/toLabelContainer"
        android:layout_marginTop="24dp">

        <Spinner
            android:id="@+id/sourceLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:popupBackground="@android:color/black"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="50dp"/>
    </androidx.cardview.widget.CardView>

    <!-- "TO" Label Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/toLabelContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/sourceLanguageContainer"
        app:layout_constraintBottom_toBottomOf="@id/sourceLanguageContainer"
        app:layout_constraintStart_toEndOf="@id/sourceLanguageContainer"
        app:layout_constraintEnd_toStartOf="@id/targetLanguageContainer"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/toLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <!-- Target Language Spinner Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/targetLanguageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/sourceLanguageContainer"
        app:layout_constraintBottom_toBottomOf="@id/sourceLanguageContainer"
        app:layout_constraintStart_toEndOf="@id/toLabelContainer"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/targetLanguageSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:popupBackground="@android:color/black"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="50dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Speech Input Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/speechInputContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/sourceLanguageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/speechInputText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Tap the mic and speak..."
            android:textSize="16sp"
            android:textColorHint="@color/whitish_navy_1"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:padding="15dp"
            android:inputType="textMultiLine"/>
    </androidx.cardview.widget.CardView>

    <!-- Microphone Button -->
    <ImageButton
        android:id="@+id/micButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/mic_button_background"
        android:src="@drawable/mic"
        android:contentDescription="Mic Button"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@id/speechInputContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>

    <!-- Translated Output Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/translatedTextContainer"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/micButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/translatedText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Translation appears here..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="15dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Translate Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/translateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/black"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp"
        android:elevation="4dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/translatedTextContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>