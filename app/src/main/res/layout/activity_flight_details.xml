<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="16dp"
    tools:context=".FlightDetails">

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/black"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp"
        android:elevation="4dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <!-- Flight Details Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:backgroundTint="@color/whitish_navy_1"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/airlineText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Airline: British Airways"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/navy_blue" />

            <!-- Flight Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/flightNumberText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Flight: BA248"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue" />

                <TextView
                    android:id="@+id/flightClassText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Class: Business"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Departure & Arrival -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/departureText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From: London"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue" />

                <TextView
                    android:id="@+id/arrivalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To: New York"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Time Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/departureTimeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Departs: 10:30 AM"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue" />

                <TextView
                    android:id="@+id/arrivalTimeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arrives: 3:45 PM"
                    android:textSize="16sp"
                    android:textColor="@color/navy_blue"
                    android:gravity="end" />
            </LinearLayout>

            <!-- Duration -->
            <TextView
                android:id="@+id/durationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 7h 15m"
                android:textSize="16sp"
                android:textColor="@color/navy_blue"
                android:paddingTop="8dp" />

            <!-- Baggage -->
            <TextView
                android:id="@+id/baggageAllowanceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Baggage: 2 Bags, 23kg Each"
                android:textSize="16sp"
                android:textColor="@color/navy_blue"
                android:paddingTop="8dp" />

            <!-- Layovers -->
            <TextView
                android:id="@+id/layoversText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Layovers: None"
                android:textSize="16sp"
                android:textColor="@color/navy_blue"
                android:paddingTop="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/priceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: Â£850"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Book Now Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bookNowButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        app:backgroundTint="@android:color/black"
        app:cornerRadius="12dp"
        app:strokeColor="@android:color/white"
        app:strokeWidth="1dp"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/detailsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
