<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy_blue"
    android:padding="16dp"
    tools:context=".FlightDetails">

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>

    <!-- Flight Details Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/light_gray"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/airlineText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Airline: "
                android:textSize="18sp"
                android:textColor="@color/navy_blue"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/flightNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flight Number: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/departureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/arrivalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/durationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/departureTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Time: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/arrivalTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrival Time: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/baggageAllowanceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baggage Allowance: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/flightClassText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

            <TextView
                android:id="@+id/layoversText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layovers: "
                android:textSize="16sp"
                android:textColor="@color/navy_blue"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/bookNowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Now"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@color/navy_blue"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/detailsContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
