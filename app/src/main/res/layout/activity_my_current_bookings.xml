<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/navy_blue">

    <!-- Page Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Current Bookings"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="16dp"/>

    <!-- Hotel Bookings Title -->
    <TextView
        android:id="@+id/hotelBookingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hotel Bookings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"/>

    <!-- Hotel Bookings RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hotelRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hotelBookingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"/>

    <!-- Flight Bookings Title -->
    <TextView
        android:id="@+id/flightBookingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Bookings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/hotelRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"/>

    <!-- Flight Bookings RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flightRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flightBookingsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.4"/>
</androidx.constraintlayout.widget.ConstraintLayout>
